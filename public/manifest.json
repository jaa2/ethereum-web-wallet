{
	"name": "Ethereum Web Wallet",
	"manifest_version": 2,
	"description": "A web3 wallet connecting you to the world of DeFi!",
	"version": "0.0.1",

    "icons": {
        "48": "ww-48.png",
        "1024": "ww-1024.png"
    },

    "background": {
        "page": "background.html"
    },

    "permissions": ["storage", "http://localhost:8545/"],

    "browser_action": {
        "default_icon": {
            "48": "ww-48.png",
            "1024": "ww-1024.png"
        },
        "default_title": "Ethereum Web Wallet",
        "default_popup": "index.html"
    }
}
